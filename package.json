{
  "name": "label-when-approved",
  "version": "0.1.0",
  "private": true,
  "description": "Label pull requests when approved",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "package": "ncc build --license licenses.txt",
    "all": "npm run build && npm run format && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ableco/label-when-approved-action.git"
  },
  "author": "engineering@able.co",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/github": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.4.13",
    "@vercel/ncc": "^0.29.1",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  }
}
